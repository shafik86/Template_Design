@page "/"
@using Template_Design.shared

<PageTitle>Home</PageTitle>


<h1>@Text1</h1>

<MudPaper Elevation="2" Class="pa-4 p-2 m-2" Style="align-self:baseline;height:auto;width:98%">
    <div class="row m-3">
        @foreach (var design in Designs)
        {
            <div class="card pa-4 m-3" style="width: 15rem;">
                <img class="card-img-top" src="@design.Thumb" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title text-primary"><b>@design.Name</b></h5>
                    <h6 class="card-text text-warning mb-2">@design.Description</h6>
                    <div class="row inline">
                        <div class="col-6">
                            <a href="@($"TemplateView/{design.Id}")" class="btn btn-primary btn-sm mt-2 " style="float:left;">View</a>
                        </div>
                        <div class="col-6">
                            <a href="@($"TemplateView/{design.Id}")" class="btn btn-success btn-sm mt-2 " style="float:right;">Buy</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</MudPaper>




